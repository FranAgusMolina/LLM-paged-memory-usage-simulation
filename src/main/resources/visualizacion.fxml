<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <Label text="Simulador PagedAttention - Arquitectura de Computadoras" BorderPane.alignment="CENTER">
            <font><Font name="System Bold" size="16.0" /></font>
            <padding><Insets bottom="10.0" top="10.0" /></padding>
        </Label>
    </top>

    <left>
        <VBox prefHeight="200.0" prefWidth="180.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding><Insets left="10.0" right="10.0" top="10.0" /></padding>

            <TitledPane text="Simulación" collapsible="false">
                <VBox spacing="5.0">
                    <Button fx:id="btnIniciar" text="▶ Iniciar" maxWidth="Infinity" onAction="#onBtnStartClick"/>
                    <Button fx:id="btnDetener" text="⏹ Detener" maxWidth="Infinity" disable="true" onAction="#onBtnStopClick"/>
                </VBox>
            </TitledPane>

            <TitledPane text="TLB Stats" collapsible="false">
                <VBox spacing="5.0">
                    <Label fx:id="lblHits" text="Hits: 0" textFill="GREEN"/>
                    <Label fx:id="lblMisses" text="Misses: 0" textFill="RED"/>
                </VBox>
            </TitledPane>
        </VBox>
    </left>

    <center>
        <ScrollPane fx:id="scrollMemoria" fitToWidth="true" fitToHeight="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </center>

    <right>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="250.0" BorderPane.alignment="CENTER">
            <VBox>
                <Label text="Procesos Activos" />
                <TableView fx:id="tablaProcesos" VBox.vgrow="ALWAYS">
                </TableView>
            </VBox>

            <VBox>
                <Label text="Tabla de Páginas" />
                <TableView fx:id="tablaPaginas" VBox.vgrow="ALWAYS">
                </TableView>
            </VBox>
        </SplitPane>
    </right>

    <bottom>
        <TextArea fx:id="txtLog" editable="false" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </bottom>

</BorderPane>